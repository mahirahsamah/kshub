<h1>Forgot your password?</h1>

<%= form_with url: password_reset_path do |form| %>

    <div class="mb-3">
        <%= form.label :Email %>
        <%= form.text_field :Email, class:"form-control", placeholder: "jane@tamu.edu" %>
    </div>

    <div class="mb-3">
        <%= form.submit "Reset password", class:"btn btn-primary" %>
    </div>

<%end%>