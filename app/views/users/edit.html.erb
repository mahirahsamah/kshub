<h2>Edit Profile</h2>
<%= form_for(@user) do |f| %>

  <div class="card shadow p-3 bg-white rounded " style=" margin:20px 43vh; margin-bottom:10px">
  <div class="card-body">
  

  <div class="field">
    <%= f.label "Email", { class: "form-label"} %><br />
    <%= f.email_field :email, { class: "form-control", placeholder: "Email", autofocus: true, autocomplete: "email" } %>
  </div>

  
  <div style="display:flex">
  <div class="field width50">
    <%= f.label "First Name", { class: "form-label"}  %><br />
    <%= f.text_field :firstname,  { class: "form-control", placeholder: "First Name", autofocus: true, autocomplete: "firstname" }  %>
  </div>

  <div class="field width50">
    <%= f.label "Last Name", { class: "form-label"}  %><br />
    <%= f.text_field :lastname, { class: "form-control", placeholder: "Last Name", autofocus: true, autocomplete: "lastname" }%>
  </div>
  </div>

  <div class="field">
    <%= f.label "UIN", { class: "form-label"}  %><br />
    <%= f.text_field :uin, { class: "form-control", placeholder: "UIN", autofocus: true, autocomplete: "uin" } %>
  </div>

  <div style="display:flex">

  <div class="field width50">
    <%= f.label "Username", { class: "form-label"}  %><br />
    <%= f.text_field :username, { class: "form-control", placeholder: "Username", autofocus: true, autocomplete: "username" }%>
  </div>

  <div class="field width50">
    <%= f.label "Phone Number", { class: "form-label"}  %><br />
    <%= f.text_field :phonenumber, { class: "form-control", placeholder: "Phone Number", autofocus: true, autocomplete: "phonenumber" }%>
  </div>
  </div>

  <div style="display:flex">

  <div class="field width50">
    <%= f.label "Major", { class: "form-label"}  %><br />
    <%= f.text_field :major,{ class: "form-control", placeholder: "Major", autofocus: true, autocomplete: "major" }%>
  </div>

  <div class="field width50">
    <%= f.label "Pledge Class", { class: "form-label"}  %><br />
    <%= f.text_field :pledgeclass, { class: "form-control", placeholder: "Pledge Class", autofocus: true, autocomplete: "pledgeclass" } %>
  </div>
    </div>

    <div class="field">
        <%= f.check_box :admin %>
        <%= f.label "Admin" %>
    </div>

    <div class="field">
        <%= f.check_box :approved %>
        <%= f.label "Approved" %>
    </div>



      <div class="actions" style="margin-top:20px">
        <div style="display:flex;">
          <div style="width:33%; margin-left: 0vw"> 

          </div>
          <div style="width:33%; justify-content:center; display:flex"> 
            <%= f.submit "Update Profile", class: "btn btn-outline-secondary newMerchandise signupPageButton"  %>
          </div>
          <div style="width:33%"> 

          </div>


        </div>

      </div>

      </div>
</div>
<% end %>



