<!DOCTYPE html>

<html>
  <head>
    <%= stylesheet_link_tag "style.css" %>
    <title>KsHubApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  </head>

  <body style="background-color:#E7D1B5;">
  
  <div class="flash-message-wrapper">
    <% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>">
        <%= value %>

      </div>
    <% end %>
  </div>
      
  <% if user_signed_in? %>
    <nav class="navbar navbar-expand-md navbar-dark navbarStyles">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarColor01" >
        <ul class="navbar-nav mr-auto" style="width:87%; justify-content:right;">
          <li class="nav-item">
          <%= link_to root_path do%>
            <%= image_tag "kslogo.png", class:"loggedin-nav" %>
          <%end%>
          </li>
        
          <li class="nav-item">
          </li>
          <li class="nav-item <%= active_class(announcements_path) %>">
            <%= link_to 'Announcements', announcements_path, class: 'nav-link one' %>
          </li>
          <li class="nav-item <%= active_class(events_path) %>">
            <%= link_to 'Events', events_path , class: 'nav-link one' %>
          </li>
          <li class="nav-item <%= active_class(merches_path) %>">
           <%= link_to 'Merchandise', merches_path , class: 'nav-link one'  %>
          </li>
          <li class="nav-item <%= active_class(members_path) %>">
            <%= link_to 'Roster', members_path, class: 'nav-link one' %>
          </li>
          <li class="nav-item <%= active_class(profile_page_index_path) %>">
            <%= link_to 'My Profile', profile_page_index_path, class: 'nav-link profile-nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link signout-nav-link' %>
          </li>

        </ul>
  <% end %>

      </div>
    </nav>

    

    <% if controller_name == 'pages' and !user_signed_in? %>

        <nav class="navbar navbar-expand-md navbar-dark navbarStyles">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarColor01" >
            <ul class="navbar-nav mr-auto" style="width:87%; justify-content:right;">
              <li class="nav-item">
                <%= image_tag "kslogo.png", class: 'nav-img' %>
              </li>
              <li class="nav-item">
              </li>

              <li class="nav-item <%= active_class(new_user_registration_path) %>">
                <%= link_to 'Sign up', new_user_registration_path , class: 'landing-nav' %>
              </li>
              <li class="nav-item <%= active_class(new_user_session_path) %>">
                <%= link_to 'Sign in', new_user_session_path, class: 'landing-nav' %>
              </li>

          </div>
          </nav>
        <%= image_tag 'images.png', class: "style-image" %>
        <h2> Welcome to KS Hub by Kappa Sigma</h2>
        <h4>Please sign up or sign in to continue</h4>

        <%= link_to 'Sign up', new_user_registration_path, class: "button-35" %>
        <%= link_to 'Sign in', new_user_session_path, class: "button-35" %>

    <% end %>

    <%= yield %>
  </body>
</html>
