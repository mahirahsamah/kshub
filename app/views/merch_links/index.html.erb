<p id="notice"><%= notice %></p>

<h1>Merch Links</h1>

<table>
  <thead>
    <tr>
      <th>Linkid</th>
      <th>Linkdescription</th>
      <th>Uin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @merch_links.each do |merch_link| %>
      <tr>
        <td><%= merch_link.LinkID %></td>
        <td><%= merch_link.LinkDescription %></td>
        <td><%= merch_link.UIN %></td>
        <td><%= link_to 'Show', merch_link %></td>
        <td><%= link_to 'Edit', edit_merch_link_path(merch_link) %></td>
        <td><%= link_to 'Destroy', merch_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

