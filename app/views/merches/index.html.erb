<p id="notice"><%= notice %></p>

<h1>Merchandise</h1>

<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Link</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @merches.each do |merch| %>
            <tr>
                <td><%= merch.name %></td>
                <td><%= merch.price %></td>
                <td><%= link_to merch.link, merch.link %></td>
                <td><%= link_to 'Show', merch %></td>
                <% if current_user && current_user.admin %>
                    <td><%= link_to 'Edit', edit_merch_path(merch) %></td>
                    <td><%= link_to 'Destroy', merch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
    
</table>


<br>

<% if current_user && current_user.admin %>
    <%= link_to 'New Merchandise', new_merch_path %>
<% end %>
