<p id="notice"><%= notice %></p>

<head>

  <style>
    table {
      width: 90%;
      margin: auto;
    }

    th {
      border: 1px solid #ddd;
      padding: 8px;
      background-color: #8B0000;
      color: white;
      text-align: center;
    }

    td {
      border: 1px solid #ddd;
      padding: 8px;
      background-color: #DCDCDC;
      text-align: center;
    }

    body {
      background-color: #D2B48C;
    }
  </style>
</head>

<h1 style="margin-left:40px; margin-top:40px">Members</h1>

<table>
  <thead>
    <tr>
      <% if current_user && current_user.admin%>
        <th colspan="3">UIN</th>
      <% end %>
      <th colspan="3">First Name</th>
      <th colspan="3">Last Name</th>
      <th colspan="3">Phone Number</th>
      <th colspan="3">Email</th>
      <th colspan="3">Pledge Class</th>
      <th colspan="3">Major</th>
      <% if current_user && current_user.admin%>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <% if user.active %>
        <% if current_user && current_user.admin%>
          <td colspan="3"><%= user.uin %></td>
        <% end %>
        <td colspan="3"><%= user.firstname %></td>
        <td colspan="3"><%= user.lastname %></td>
        <td colspan="3"><%= user.phonenumber %></td>
        <td colspan="3"><%= user.email %></td>
        <td colspan="3"><%= user.pledgeclass %></td>
        <td colspan="3"><%= user.major %></td>
        <% if current_user && current_user.admin %>
          <% if current_user != user %>
          <td><div class="btn btn-outline-secondary" style="align-content=center">
            <%= link_to 'Remove', members_remove_path(user), :class => "btn newMerchandise"  %>
          </div></td>
          <% end %>
          <% if current_user == user %>
            <td></td>
          <% end %>
        <% end %>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>