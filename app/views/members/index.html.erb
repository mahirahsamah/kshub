<p id="notice"><%= notice %></p>

<head>
  <style>
    table {
      width: 90%;
      margin: auto;
    }

    th {
      border: 1px solid #ddd;
      padding: 8px;
      background-color: #8B0000;
      color: white;
    }

    td {
      border: 1px solid #ddd;
      padding: 8px;
      background-color: #DCDCDC;
    }

    body {
      background-color: #D2B48C;
    }
  </style>
</head>

<h1 style="padding-left=20px" margin="auto">Members</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">UIN</th>
      <th colspan="3">First Name</th>
      <th colspan="3">Last Name</th>
      <th colspan="3">Phone Number</th>
      <th colspan="3">Email</th>
      <th colspan="3">Pledge Class</th>
      <th colspan="3">Major</th>
      <% if current_user && current_user.admin%>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td colspan="3"><%= user.uin %></td>
        <td colspan="3"><%= user.firstname %></td>
        <td colspan="3"><%= user.lastname %></td>
        <td colspan="3"><%= user.phonenumber %></td>
        <td colspan="3"><%= user.email %></td>
        <td colspan="3"><%= user.pledgeclass %></td>
        <td colspan="3"><%= user.major %></td>
        <% if current_user && current_user.admin %>
          
          <tr>
            <td><%= user.email %>
            <td><%= user.approved %>
          </tr>
          
          <% if current_user != user %>
            <td><%= link_to 'Remove', members_delete_path_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          <% if current_user == user %>
            <td></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>