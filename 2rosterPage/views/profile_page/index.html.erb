<h1 style="padding-left=20px" margin="auto">My Profile</h1>
<button class="btn" type="button">
  <%= link_to 'Edit', edit_user_registration_path(@user) %>
</button>

<table>
  <tbody>
    <tr>
        <th colspan="3">First Name</th>
        <td><%= @user.firstname %></td>
    </tr>
    <tr>
        <th colspan="3">Last Name</th>
        <td><%= @user.lastname %></td>
    </tr>
    <tr>
        <th colspan="3">UIN</th>
        <td><%= @user.uin %></td>
    </tr>
    <tr>
        <th colspan="3">Email</th>
        <td><%= @user.email %></td>
    </tr>
    <tr>
        <th colspan="3">Phone Number</th>
        <td><%= @user.phonenumber %></td>
    <tr>
        <th colspan="3">Major</th>
        <td><%= @user.major %></td>
    </tr>
    <tr>
        <th colspan="3">Pledge Class</th>
        <td><%= @user.pledgeclass %></td>
    </tr>
    <tr>
        <th colspan="3">Username</th>
        <td><%= @user.username %></td>
    </tr>
  </tbody>
</table>

